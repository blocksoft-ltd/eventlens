{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "global.d.ts"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
